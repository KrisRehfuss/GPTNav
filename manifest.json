{
  "manifest_version": 3,
  "name": "ChatGPT Q&A Navigator",
  "version": "1.7",
  "description": "Overlay your ChatGPT questions and answers, color-coded and scrollable.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://chat.openai.com/*"],
  "action": {
    "default_title": "Open Q&A Navigator"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Toggle Q&A overlay"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}